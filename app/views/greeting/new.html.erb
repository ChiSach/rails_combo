<div class="container pt-5">
    <% if @say_greeting.errors.any? %>
    <h4 class="col-lg-6 col-md-6 col-sm-12 my-auto mx-auto text-danger mb-2">The following errors prevented the 'Say greeting' from being saved:</h4>
    <ul class="col-lg-6 col-md-6 col-sm-12 my-auto mx-auto mb-4">
        <% @say_greeting.errors.full_messages.each do |msg| %>
        <li class='text-danger'><%= msg %></li> 
        <% end %>
    </ul>
    <% end %>
    <%= render "greeting/form" %>
</div>